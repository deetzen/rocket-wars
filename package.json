  "license": "MIT",
  "author": {
    "name": "Matthias von Deetzen",
    "email": "hello@deetzen.de",
    "url": "https://deetzen.de"
  },
  "homepage": "https://rocket-wars.de",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/deetzen/rocket-wars.git"
  },
  "contributors": [
    {
      "name": "Christoph Weise"
    },
    {
      "name": "Dennis Schneider"
    }
  ],
  "dependencies": {
    "buntstift": "^1.5.1",
    "esm": "^3.2.20",
    "express": "^4.13.4",
    "express-browserify": "^1.0.3",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "uuidv4": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.2",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "madge": "^3.4.4",
    "nodemon": "^1.18.10",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-imagemin": "^2.1.3",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "roboter": "^4.0.2",
    "sass": "^1.17.3"
  },
  "staticFiles": {
    "staticPath": "src/public",
    "watcherGlob": "**"
  },
  "scripts": {
    "dev-frontend": "parcel src/client/index.html",
    "dev-backend": "nodemon --exec babel-node src/server/index.js",
    "dev": "concurrently --kill-others \"npm run dev-frontend\" \"npm run dev-backend\"",
    "build": "parcel build src/client/index.html && parcel build src/server/index.js --target node",
    "start": "npm run build && concurrently --kill-others \"node dist/index.js\" \"npx serve dist\""
  }
}
